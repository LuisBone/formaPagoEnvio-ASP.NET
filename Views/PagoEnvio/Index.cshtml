
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container text-center p-3 mb-2 bg-dark text-white">
        <h3 class="display-4">Elije la forma de pago y envio que se adapte a tus necesidades.</h3>
    </div>
</div>
<div class="container">


    <div class="row">
        <div class="col-md-6">

            <h1>FORMA DE PAGO</h1>
            <hr />
            <div class="card border-primary mb-3">

                <div class="card-body text-primary">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            Contra Entrega
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                        <label class="form-check-label" for="exampleRadios2">
                            Transferencia
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
                        <label class="form-check-label" for="exampleRadios3">
                            Depósito
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4" value="option4">
                        <label class="form-check-label" for="exampleRadios4">
                            Tarjeta de Crédito
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios5" value="option5">
                        <label class="form-check-label" for="exampleRadios5">
                            PayPal
                        </label>
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-6">

            <h1>FORMA DE ENVIO</h1>
            <hr />

            <div class="card border-primary mb-3">

                <div class="card-body text-primary">

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios100" id="exampleRadios11" value="option11" checked>
                        <label class="form-check-label" for="exampleRadios11">
                            Lugar de acopio (Terminal)
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios100" id="exampleRadios12" value="option12">
                        <label class="form-check-label" for="exampleRadios12">
                            Domicilio
                        </label>
                    </div>

                </div>

            </div>


        </div>
    </div>

    <div class="container" style="padding:5%">
        <button type="button" onclick="seguro()" class="btn btn-primary btn-lg pull-right">
            Continuar
            <i class="glyphicon glyphicon-chevron-right"></i>
        </button>
    </div>

</div>

<script>
    function seguro() {
        //alert("¿Está seguro que desea continuar?");
        // swal("¿Está seguro que desea continuar?");
        swal({
          title: "¿Está seguro que desea continuar?",
          text: "Acepta la forma de pago y envio",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-danger",
          confirmButtonText: "Si, Acepto",
          closeOnConfirm: false
        },
        function(){
            swal("Exelente!", "Hemos generada la orden de pago y envio!", "success");
        });
    }
    
</script>